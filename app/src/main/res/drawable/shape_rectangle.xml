<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 顏色 -->
    <solid android:color="#3b86ab" />
    <!-- 文字與邊框的間距 -->
    <gradient
        android:type="linear"
        android:startColor="#a3aad7"
        android:centerColor="#325ebe"
        android:endColor="#112171"
        android:angle="45">
    </gradient>
    <padding
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"
        android:left="8dp"
        />
    <!-- 設置圓角 -->
    <corners android:radius="15dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="2dp"
        android:color="#592784"
        android:dashGap="0dp"
        android:dashWidth="0dp" />
</shape>